<?xml version = "1.0"?>
<!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
    <head>
        <link name="Times New Roman" type="font" subtype="truetype"
              src="https://9684031.app.netsuite.com/core/media/media.nl?id=3063&amp;c=9684031&amp;h=NQAELmT540rfE5z_YTAOj2_oz9C2riZQXL4ZndgOjUHpH240&amp;_xt=.ttf"
              src-bold="https://9684031.app.netsuite.com/core/media/media.nl?id=3060&amp;c=9684031&amp;h=VRMnMS9G-U6-eJ7eWeyZRD2byILyUj3mcjZQkoug5te4gj3X&amp;_xt=.ttf"
              src-italic="https://9684031.app.netsuite.com/core/media/media.nl?id=3061&amp;c=9684031&amp;h=smdSHeMgMgMHl50NbUFbV4fJx5xIcrAC-YbPcCGfW7-xKWLO&amp;_xt=.ttf"
              src-bolditalic="https://9684031.app.netsuite.com/core/media/media.nl?id=3062&amp;c=9684031&amp;h=VRtHBYdpNRU-zkQenPmbUVxPGMpwd0zn4go2TJ-Q8EBJwVEB&amp;_xt=.ttf"
              bytes="2"/>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/all.css"
              integrity="sha384-rtJEYb85SiYWgfpCr0jn174XgJTn4rptSOQsMroFBPQSGLdOC5IbubP6lJ35qoM9"
              crossorigin="anonymous"/>
        <style type="text/css">
            body {
            font-size: 12pt;
            font-family: Times New Roman;
            }

            p {
            padding: 1.2;
            margin: 0;
            }

            table{
            width : 100%;
            border-collapse: collapse;
            table-layout:fixed;
            }

            .header {
            font-weight: bold;
            padding-right: 10px;
            }

            .title {
            font-size: 14pt;
            }

            .item {
            margin-top: 10px;
            }

            .item td {
            border-collapse: collapse;
            vertical-align: middle;
            border: 1px solid #000;
            }

            .item td p {
            }

            td {
            align: left;
            }
            td p {
            align: left;
            }

            .item-head td{
            vertical-align: middle;
            <!--border: 1px solid black;
            border-right: none;-->
            border-left: 1px solid black;
            border-bottom: 1px solid black;
            align : center;
            }

            .item-body td {
            vertical-align: middle;
            border-left: 1px solid black;
            border-bottom: 1px solid black;
            }

            .item-head p {
            width :  100%;
            text-align : center;
            }

            .item-body p {
            width : 100%;
            }

            .item-head td:last-child,
            .item-body td:last-child
            {
            border-right: 1px solid;
            }

            .data-head td {
            vertical-align: middle;
            }

            .data-head p {
            width : 100%;
            text-align : center;
            font-weight : bold;
            }

            .data-body td {
            vertical-align: middle;
            }

            .data-body p {
            width : 100%;
            }

            .footer {
            font-size: 10pt;
            align: center;
            }

            .input-checkbox-none{
            display: inline;
            border: none;
            background-color: white;
            margin-top: 5px;
            width: 15px;
            height: 15px;
            }

            .input-checkbox{
            display: inline;
            border: 0.1pt solid;
            background-color: white;
            margin-top: 5px;
            width: 15px;
            height: 15px;
            }

        </style>
        <macrolist>
            <macro id="nlheader">
            </macro>
        </macrolist>
        <macrolist>
            <macro id="nlfooter">

            </macro>
        </macrolist>
    </head>
    <body padding="0.2in 0.5in 0.2in 0.5in"  size="A4-LANDSCAPE">
        <table>
            <tbody class="data-body">
                <tr><td>
                    <p><b>{pSubsidiary}</b></p>
                    <p><i>{pAddress}</i></p>
                    </td>
                </tr>
                <tr height = "12pt"/>
                <tr><td><p text-align="center">
                    <b>BẢNG KÊ CHỨNG TỪ</b><br/>
                    Từ ngày {pFromDT} đến ngày {pToDT}<br/>
                </p></td></tr>
                <tr/>
            </tbody>
        </table>
        <table font-size = "8pt">
            <thead class = "item-head">
                <tr border-top = "1pt solid black"  font-weight="bold">
                    <td width="4%"><p>STT</p></td>
                    <td width="10%"><p>Loại chứng từ</p></td>
                    <td width="6%"><p>Số chứng từ</p></td>
                    <td width="6%"><p>Ngày chứng từ</p></td>
                    <td width="8%"><p>Tài khoản</p></td>
                    <td width="12%"><p>Tên TK</p></td>
                    <td width="12%"><p>TK đối ứng</p></td>
                    <td width="12%"><p>Đối tượng</p></td>
                    <td width="12%"><p>Diễn giải</p></td>
                    <td width="9%"><p>Nợ</p></td>
                    <td width="9%"><p>Có</p></td>
                </tr>
            </thead>
            <tbody class = "item-body">
                {pBodyTable}
            </tbody>
        </table>
        <div display = "block" height = "60pt">
            <table>
                <tr>
                    <td width="5%"/>
                    <td width="30%"/>
                    <td width="30%"/>
                    <td width="30%" vertical-align="middle" align="center"><i>Ngày ... tháng ... năm .... </i></td>
                    <td width="5%"/>
                </tr>
                <tr>
                    <td/>
                    <td vertical-align="middle"><p width="100%" text-align="center"><b>Người ghi sổ</b><br/><i>(Ký, họ tên)</i></p></td>
                    <td vertical-align="middle"><p width="100%" text-align="center"><b>Kế toán trưởng</b><br/><i>(Ký, họ tên)</i></p></td>
                    <td vertical-align="middle"><p width="100%" text-align="center"><b>Giám đốc</b><br/><i>(Ký, họ tên, đóng dấu)</i></p></td>
                    <td/>
                </tr>
            </table>
        </div>
    </body>
</pdf>