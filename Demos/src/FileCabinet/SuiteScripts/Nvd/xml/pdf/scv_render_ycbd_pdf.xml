<?xml version = "1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
    <head>
        <link name="ScvFont" type="font" subtype="opentype" src="${libPdf.font.times?html}" src-bold="${libPdf.font.times_bold?html}" src-italic="${libPdf.font.times_italic?html}" src-bolditalic="${libPdf.font.times_bolditalic?html}" bytes="2" />
        <style type="text/css">
            ${libPdf.css}
            input {
            display: inline;
            }
        </style>
    </head>
    <#setting locale="de_DE">
    <#function formatNumberDE value>
    <#if value?? && value?number??>
    <#return value?number?string.number>
    <#else>
    <#return "">
</#if>
        </#function>
    <body padding="0.5in 0.5in 0.2in 0.5in" size="A4-LANDSCAPE">
        <table class="fs-12">
            <tr>
                <td colspan="100" align="center">
                    <b>PHIẾU YÊU CẦU BẢO DƯỠNG</b>
                </td>
            </tr>
            <tr>
                <td colspan="100" align="center">DÂY CHUYỀN/ MÁY: ${jsonData.asset_l_text}</td>
            </tr>
            <tr>
                <td colspan="100" align="center">Số: ${jsonData.id} / BDI .....</td>
            </tr>
        </table>
        <table class="border-table mt-8" width="100%">
            <thead class="font-weight-bold" width="100%" style="background-color: #83CCEB;">
                <tr>
                    <td colspan="2" width="20%">Dây chuyền (cấp 1)</td>
                    <td colspan="2" width="20%">Cụm thiết bị (cấp 2)</td>
                    <td colspan="2" width="20%">Chi tiết máy (cấp 3)</td>
                    <td colspan="2" width="20%">Kế hoạch công việc</td>
                    <td rowspan="2" width="10%">Kết quả thực hiện</td>
                    <td rowspan="2" width="10%">Ghi chú</td>
                </tr>
                <tr>
                    <td align="center" border-top="none">Mã TS</td>
                    <td align="center" border-top="none">Tên TS</td>
                    <td align="center" border-top="none">Mã</td>
                    <td align="center" border-top="none">Tên cụm thiết bị</td>
                    <td align="center" border-top="none">Mã</td>
                    <td align="center" border-top="none">Tên chi tiêt</td>
                    <td align="center" border-top="none">Mã</td>
                    <td align="center" border-right="none" border-top="none">Diễn giải nội dung công việc</td>

                </tr>
            </thead>
            <tbody>
                <#list jsonData.rsPlanL as obj>
                <tr>
                    <td align="center">${obj.asset_l}</td>
                    <td align="left">${obj.asset_l_text}</td>
                    <td align="center">${obj.co_code}</td>
                    <td align="left">${obj.component_l_text}</td>
                    <td align="center">${obj.eq_code}</td>
                    <td align="left">${obj.equipment_l_text}</td>
                    <td align="center">${obj.type_l}</td>
                    <td align="left">${obj.description_l}</td>
                    <td align="center"></td>
                    <td align="left"></td>
                </tr>
            </#list>
        </tbody>
    </table>
<table width="100%" class="font-style-italic" >
<tr>
    <td width="100%" align="right" class="p-7">${jsonData.cmms_mp_date}</td>
</tr>
</table>
<table width="100%" class="font-weight-bold">
    <tr>
        <td colspan="2" width="40%" align="center">Bên thực hiện kế hoạch</td>
        <td rowspan="5" width="5%"></td>
        <td colspan="3" width="45%" align="center">Bên lập kế hoạch</td>
    </tr>
    <tr>
        <td align="center">Nguười thực hiện</td>
        <td align="center">Nghiệm thu</td>
        <td align="center">Người lập</td>
        <td align="center">Kiểm tra</td>
        <td align="center">Phê duyệt</td>
    </tr>
        </table>
</body>
        </pdf>